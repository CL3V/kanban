{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["backend/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src",
    ".next",
    // Exclude legacy/unused route variants and drivers from backend compile
    "backend/routes/*-old.ts",
    "backend/routes/*-fixed.ts",
    "backend/routes/*-s3.ts",
    "backend/routes/*-backup.ts",
    "backend/routes/projects-clean.ts",
    "backend/database/local-db.ts",
    "backend/database/postgres-db.ts",
    "backend/database/migrate.ts"
  ]
}
